{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "tests"]
}
